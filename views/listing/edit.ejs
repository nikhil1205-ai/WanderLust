<% layout('layouts/boiler') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="fw-bold text-primary mb-4">Edit Listing</h2>

        <form method="POST" action="/listings/<%= listData._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Title</label>
            <input 
              type="text" 
              name="listingNew[title]" 
              value="<%= listData.title %>" 
              class="form-control" 
              required>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Description</label>
            <textarea 
              name="listingNew[description]" 
              class="form-control" 
              rows="4"
              required><%= listData.description %></textarea>
          </div>

          <!-- Image -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Upload New Image</label>
            <input 
              type="file" 
              name="listingNew[image]" 
              class="form-control">
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Price (â‚¹)</label>
            <input 
              type="number" 
              name="listingNew[price]" 
              value="<%= listData.price %>" 
              class="form-control" 
              required>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Location</label>
            <input 
              type="text" 
              name="listingNew[location]" 
              value="<%= listData.location %>" 
              class="form-control" 
              required>
          </div>

          <!-- Country -->
          <div class="mb-4">
            <label class="form-label fw-semibold">Country</label>
            <input 
              type="text" 
              name="listingNew[country]" 
              value="<%= listData.country %>" 
              class="form-control" 
              required>
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-between">
            <a href="/listings/<%= listData._id %>" class="btn btn-outline-secondary">
              Cancel
            </a>
            <button type="submit" class="btn btn-primary px-4">
              <i class="fa fa-save"></i> Save Changes
            </button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>
